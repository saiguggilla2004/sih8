<% layout("/layouts/boilerplate.ejs") -%>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Users</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            padding: 20px;
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
        }

        .card-container {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
            gap: 20px; /* Space between cards */
            justify-items: center;
        }

        .card {
            border: 1px solid #ddd;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s ease;
            display: flex;
            flex-direction: column;
            width: 100%;
            max-width: 300px; /* Max width for each card */
        }

        .card:hover {
            transform: scale(1.05);
        }

        .card-img-top {
            width: 100%;
            height: 180px; /* Fixed height for image */
            object-fit: cover;
        }

        .card-body {
            padding: 15px;
            flex: 1; /* Allows the card body to take up remaining space */
        }

        .card-title {
            font-size: 1.25rem;
            margin-bottom: 10px;
        }

        .card-text {
            font-size: 1rem;
            color: #555;
            max-height: 60px; /* Max height for card text */
            overflow: hidden;
            text-overflow: ellipsis;
            line-height: 1.4;
        }

        .card-link {
            text-decoration: none;
            color: #007bff;
            margin-right: 10px;
        }

        .card-link:hover {
            text-decoration: underline;
        }

        .btn {
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            padding: 10px 15px;
            cursor: pointer;
            font-size: 1rem;
        }

        .btn:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <h2>Alumni Network</h2>
    
    <div class="card-container">
        <% for (const user of users) { %>
          <% if (!(user.username === "admin")) { %>
            <div class="card">
                <img class="card-img-top" src="<%= user.profilePicture.url %>" alt="<%= user.username %> profile picture">
                <div class="card-body">
                    <h5 class="card-title"><%= user.username %></h5>
                    <p class="card-text"><%= user.bio %></p>
                </div>
                <div class="card-body">
                    <form action="/users/<%=user._id %>" method="get">
                        <button class="btn">View More</button>
                    </form>
                </div>
            </div>
          <% } %>
        <% } %>
    </div>
</body>
</html>
